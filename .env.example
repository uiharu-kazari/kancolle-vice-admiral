# KanColle Vice Admiral Configuration
# Copy this file to .env and fill in your actual values

# Required: Google AI API Key (get from https://console.cloud.google.com/)
GEMINI_API_KEY=your_gemini_api_key_here

# Required: DMM Account Credentials
DMM_EMAIL=your_dmm_email@example.com
DMM_PASSWORD=your_dmm_password_here

# Optional: AI Model Configuration
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Optional: Automation Settings
AUTO_RETRY_COUNT=3
SCREENSHOT_ON_ERROR=true
LOG_LEVEL=INFO
ENABLE_AI_INTERVENTION=true
MAX_AUTOMATION_TIME_MINUTES=60
PAUSE_BETWEEN_ACTIONS_MS=1000

# Optional: Directory Paths
SCRIPTS_OUTPUT_DIR=./generated_scripts
LOGS_DIR=./logs
SCREENSHOTS_DIR=./screenshots

# Optional: Game Configuration
KANCOLLE_URL=http://www.dmm.com/netgame/social/-/gadgets/=/app_id=854854
GAME_REGION=jp 